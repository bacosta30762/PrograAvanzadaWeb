@model ProyectoPrograAvanzadaWeb.ViewModel.RestablecerPasswordViewModel

<h2>Restablecer contraseña</h2>
<form asp-action="RestablecerPassword" method="post">
    <input type="hidden" asp-for="Token" />
    <div class="form-group">
        <label for="Correo">Correo electrónico</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="NuevaPassword">Nueva contraseña</label>
        <input asp-for="NuevaPassword" type="password" class="form-control" />
        <span asp-validation-for="NuevaPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Restablecer</button>
</form>